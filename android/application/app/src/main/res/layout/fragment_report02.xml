<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="createdCase" type="de.unihannover.se.tauben2.model.database.entity.Case" />
    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/report_special_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:text="@string/kind_of_pigeon"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/report_special_help"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Eine Brieftaube erkennst du an einem farbigen Plastikring um eines ihrer Beine. Eine Ziertaube ist z.B. eine vollständig weiße Taube."
                app:layout_constraintEnd_toEndOf="@+id/report_special_title"
                app:layout_constraintStart_toStartOf="@+id/report_special_title"
                app:layout_constraintTop_toBottomOf="@+id/report_special_title" />

            <CheckBox
                android:id="@+id/report_special_checkbox_00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:buttonTint="@color/colorPrimaryDark"

                android:text="@string/carrier_pigeon"
                app:layout_constraintEnd_toEndOf="@+id/report_special_help"
                app:layout_constraintStart_toStartOf="@+id/report_special_help"
                app:layout_constraintTop_toBottomOf="@+id/report_special_help" />

            <CheckBox
                android:id="@+id/report_special_checkbox_01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:buttonTint="@color/colorPrimaryDark"

                android:text="@string/wedding_pigeon"
                app:layout_constraintEnd_toEndOf="@+id/report_special_checkbox_00"
                app:layout_constraintStart_toStartOf="@+id/report_special_checkbox_00"
                app:layout_constraintTop_toBottomOf="@+id/report_special_checkbox_00" />

            <CheckBox
                android:id="@+id/report_special_checkbox_02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:buttonTint="@color/colorPrimaryDark"
                android:checked="false"
                android:text="@string/common_wood_pigeon"
                app:layout_constraintEnd_toEndOf="@+id/report_special_checkbox_00"
                app:layout_constraintStart_toStartOf="@+id/report_special_checkbox_00"
                app:layout_constraintTop_toBottomOf="@+id/report_special_checkbox_01" />

            <CheckBox
                android:id="@+id/report_special_checkbox_03"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:buttonTint="@color/colorPrimaryDark"
                android:checked="false"
                android:text="@string/feral_pigeon"
                app:layout_constraintEnd_toEndOf="@+id/report_special_checkbox_00"
                app:layout_constraintStart_toStartOf="@+id/report_special_checkbox_00"
                app:layout_constraintTop_toBottomOf="@+id/report_special_checkbox_02" />

            <TextView
                android:id="@+id/report_additional_information_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:text="@string/additional_information"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/report_special_checkbox_03" />

            <TextView
                android:id="@+id/report_additional_information_help"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/additional_information_help"
                app:layout_constraintEnd_toEndOf="@+id/report_additional_information_title"
                app:layout_constraintStart_toStartOf="@+id/report_additional_information_title"
                app:layout_constraintTop_toBottomOf="@+id/report_additional_information_title" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/report_additional_information_textfield"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:hint="@string/additional_information"
                app:hintEnabled="true"
                app:layout_constraintBottom_toTopOf="@+id/report_send_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/report_additional_information_help">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/report_additional_information_textfield_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={createdCase.additionalInfo}" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/report_send_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="@string/report_pigeon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/report_prev_step_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="@string/back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>