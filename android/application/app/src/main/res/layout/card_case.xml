<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="c"
            type="de.unihannover.se.tauben2.model.entity.Case" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:clickable="true"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_card"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/common_google_signin_btn_text_light_default"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/elapsed_time_text_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Eingereicht vor:"
                app:layout_constraintStart_toEndOf="@+id/image_card"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/elapsed_time_text_card_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@{c.sinceString}"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/elapsed_time_text_card_title"
                app:layout_constraintStart_toEndOf="@+id/elapsed_time_text_card_title"
                app:layout_constraintTop_toTopOf="@+id/elapsed_time_text_card_title" />

            <TextView
                android:id="@+id/priority_text_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="PrioritÃ¤t:"
                app:layout_constraintBottom_toTopOf="@+id/distance_text_card_title"
                app:layout_constraintStart_toEndOf="@+id/image_card"
                app:layout_constraintTop_toBottomOf="@+id/elapsed_time_text_card_title" />

            <TextView
                android:id="@+id/priority_text_card_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{``+ c.priority}"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/priority_text_card_title"
                app:layout_constraintStart_toStartOf="@+id/elapsed_time_text_card_value"
                app:layout_constraintTop_toTopOf="@+id/priority_text_card_title" />

            <TextView
                android:id="@+id/distance_text_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Entfernung:"
                app:layout_constraintBottom_toBottomOf="@+id/image_card"
                app:layout_constraintStart_toEndOf="@+id/image_card" />

            <TextView
                android:id="@+id/distance_text_card_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no GPS available"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/distance_text_card_title"
                app:layout_constraintStart_toStartOf="@+id/elapsed_time_text_card_value"
                app:layout_constraintTop_toTopOf="@+id/distance_text_card_title" />

            <ImageView
                android:id="@+id/status_card_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:tint="#AA0000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_status" />

            <!-- invisible Divider to being able to margin the image at the bottom -->
            <View
                android:id="@+id/invisible_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:alpha="0"
                android:background="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_card" />

            <!-- expandable Menu -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/expand_card"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/image_card">

<!---                <data>
                    <variable
                        name="injury"
                        type="de.unihannover.se.tauben2.model.entity.injury"/>
                </data>
-->
                <View
                    android:id="@+id/divider_card"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/case_id_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:text="Case ID:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/case_id_card_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="#2018012345"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/case_id_card_title"
                    app:layout_constraintStart_toEndOf="@+id/case_id_card_title"
                    app:layout_constraintTop_toTopOf="@+id/case_id_card_title" />

                <TextView
                    android:id="@+id/date_time_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Timestamp:"
                    app:layout_constraintBottom_toBottomOf="@+id/case_id_card_title"
                    app:layout_constraintEnd_toStartOf="@+id/date_time_card_value"
                    app:layout_constraintTop_toTopOf="@+id/case_id_card_title" />

                <TextView
                    android:id="@+id/date_time_card_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="28.06 14:12 Uhr"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/date_time_card_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/date_time_card_title" />

                <TextView
                    android:id="@+id/media_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Media"
                    app:layout_constraintStart_toStartOf="@+id/case_id_card_title"
                    app:layout_constraintTop_toBottomOf="@+id/case_id_card_title" />

                <LinearLayout
                    android:id="@+id/media_card_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/media_card_title">

                    <ImageView
                        android:id="@+id/media_00_card"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="8dp"
                        android:background="@color/common_google_signin_btn_text_light_default"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@tools:sample/backgrounds/scenic" />

                    <ImageView
                        android:id="@+id/media_01_card"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="8dp"
                        android:background="@color/common_google_signin_btn_text_light_default"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@tools:sample/backgrounds/scenic" />

                    <ImageView
                        android:id="@+id/media_02_card"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="8dp"
                        android:background="@color/common_google_signin_btn_text_light_default"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@tools:sample/backgrounds/scenic" />
                </LinearLayout>

                <TextView
                    android:id="@+id/injury_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Injury"
                    app:layout_constraintStart_toStartOf="@+id/media_card_title"
                    app:layout_constraintTop_toBottomOf="@+id/media_card_layout" />

                <ListView
                    android:id="@+id/injury_card_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/injury_card_title"
                    app:layout_constraintTop_toBottomOf="@+id/injury_card_title" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/additional_information_card_textfield"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:hintEnabled="true"
                    android:hint="additional Informations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/injury_card_value"
                    app:layout_constraintTop_toBottomOf="@+id/injury_card_value">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="..."
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/user_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="processed by:"
                    app:layout_constraintBottom_toBottomOf="@+id/accept_card_button"
                    app:layout_constraintStart_toStartOf="@+id/additional_information_card_textfield"
                    app:layout_constraintTop_toTopOf="@+id/accept_card_button" />

                <TextView
                    android:id="@+id/user_card_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="no user assigned"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/user_card_title"
                    app:layout_constraintStart_toEndOf="@+id/user_card_title"
                    app:layout_constraintTop_toTopOf="@+id/user_card_title" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/accept_card_button"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="accept"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/additional_information_card_textfield" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
