<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <TextView
            style="@style/RobotoTextViewStyle"
            android:id="@+id/report_special_help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:textSize="18sp"
            android:text="@string/lorem_ipsum"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/report_special_title"
            style="@style/RobotoTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:gravity="center_vertical"
            android:text="@string/kind_of_pigeon"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/report_special_help" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/show_examples"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="show examples"
            app:layout_constraintBottom_toBottomOf="@+id/report_special_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/report_special_title"
            app:layout_constraintTop_toTopOf="@+id/report_special_title" />

        <CheckBox
            android:id="@+id/report_special_checkbox_00"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:buttonTint="@color/colorPrimaryDark"
            android:checked="false"
            android:text="@string/carrier_pigeon"
            app:layout_constraintEnd_toEndOf="@+id/report_special_help"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/report_special_title" />

        <CheckBox
            android:id="@+id/report_special_checkbox_01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:buttonTint="@color/colorPrimaryDark"
            android:checked="false"
            android:text="@string/wedding_pigeon"
            app:layout_constraintEnd_toEndOf="@+id/report_special_checkbox_00"
            app:layout_constraintStart_toStartOf="@+id/report_special_checkbox_00"
            app:layout_constraintTop_toBottomOf="@+id/report_special_checkbox_00" />

        <CheckBox
            android:id="@+id/report_special_checkbox_02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:buttonTint="@color/colorPrimaryDark"
            android:checked="false"
            android:text="@string/common_wood_pigeon"
            app:layout_constraintEnd_toEndOf="@+id/report_special_checkbox_00"
            app:layout_constraintStart_toStartOf="@+id/report_special_checkbox_00"
            app:layout_constraintTop_toBottomOf="@+id/report_special_checkbox_01" />

        <CheckBox
            android:id="@+id/report_special_checkbox_03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:buttonTint="@color/colorPrimaryDark"
            android:checked="false"
            android:text="@string/feral_pigeon"
            app:layout_constraintEnd_toEndOf="@+id/report_special_checkbox_00"
            app:layout_constraintStart_toStartOf="@+id/report_special_checkbox_00"
            app:layout_constraintTop_toBottomOf="@+id/report_special_checkbox_02" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>