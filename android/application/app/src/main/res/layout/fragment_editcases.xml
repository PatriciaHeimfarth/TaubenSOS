<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable name="c" type="de.unihannover.se.tauben2.model.entity.Case" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/design_default_color_background">

        <ImageView
            android:id="@+id/status_card_image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_status" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/report_next_step_button3"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="mir zuweisen"
            app:layout_constraintBottom_toBottomOf="@+id/accept_card_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/accept_card_button" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/report_state_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/state"
            app:layout_constraintTop_toTopOf="@+id/state">

            <CheckBox
                android:id="@+id/report_state_checkBox_00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:buttonTint="@color/colorPrimaryDark"
                android:text="Fall offen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/report_state_checkBox_01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:buttonTint="@color/colorPrimaryDark"
                android:text="Fall in Bearbeitung"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/report_state_checkBox_00" />

            <CheckBox
                android:id="@+id/report_state_checkBox_02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:buttonTint="@color/colorPrimaryDark"
                android:text="Fall erfolgreich abgeschlossen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/report_state_checkBox_01" />

            <CheckBox
                android:id="@+id/report_state_checkBox_03"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:buttonTint="@color/colorPrimaryDark"
                android:text="Tier verstorben"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/report_state_checkBox_02" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/report_state_min3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="     gut"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/priority_text_card_value"
            app:layout_constraintStart_toEndOf="@+id/priority_text_card_title"
            app:layout_constraintTop_toTopOf="@+id/priority_text_card_value" />

        <TextView
            android:id="@+id/report_state_max3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="schlecht"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/priority_text_card_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/priority_text_card_value" />

        <SeekBar
            android:id="@+id/priority_text_card_value"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:max="4"
            android:progress="1"
            android:progressTint="@color/colorPrimaryDark"
            android:thumbTint="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="@+id/priority_text_card_title"
            app:layout_constraintEnd_toStartOf="@+id/report_state_max3"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/report_state_min3"
            app:layout_constraintTop_toTopOf="@+id/priority_text_card_title" />

        <TextView
            android:id="@+id/priority_text_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="PrioritÃ¤t:"
            app:layout_constraintStart_toStartOf="@+id/case_id_card_title"
            app:layout_constraintTop_toBottomOf="@+id/user_card_title" />

        <TextView
            android:id="@+id/elapsed_time_text_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Eingereicht vor:"
            app:layout_constraintStart_toStartOf="@+id/case_id_card_title"
            app:layout_constraintTop_toBottomOf="@+id/case_id_card_title" />

        <TextView
            android:id="@+id/elapsed_time_text_card_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{c.sinceString}"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/date_time_card_value"
            app:layout_constraintStart_toEndOf="@+id/date_time_card_value"
            app:layout_constraintTop_toTopOf="@+id/date_time_card_value"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/injury_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Verletzung:"
            app:layout_constraintStart_toStartOf="@+id/case_id_card_title"
            app:layout_constraintTop_toBottomOf="@+id/report_state_layout" />

        <TextView
            android:id="@+id/case_id_card_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:text="#2018012345"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/case_id_card_title"
            app:layout_constraintStart_toEndOf="@+id/case_id_card_title"
            app:layout_constraintTop_toTopOf="@+id/case_id_card_title"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/user_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Angenommen von:"
            app:layout_constraintStart_toStartOf="@+id/case_id_card_title"
            app:layout_constraintTop_toBottomOf="@+id/elapsed_time_text_card_title" />

        <TextView
            android:id="@+id/user_card_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="no user assigned"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/user_card_title"
            app:layout_constraintStart_toEndOf="@+id/user_card_title"
            app:layout_constraintTop_toTopOf="@+id/user_card_title"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/additional_information_card_textfield"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="50dp"
            android:hint="additional Informations"
            app:hintEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/injury_card_value">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:text="..." />

        </com.google.android.material.textfield.TextInputLayout>

        <ListView
            android:id="@+id/injury_card_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/injury_card_title"
            app:layout_constraintTop_toBottomOf="@+id/injury_card_title" />

        <TextView
            android:id="@+id/case_id_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Case ID:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date_time_card_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28.06 14:12 Uhr (vor "
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/elapsed_time_text_card_title"
            app:layout_constraintStart_toStartOf="@+id/case_id_card_value"
            app:layout_constraintTop_toTopOf="@+id/elapsed_time_text_card_title"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/accept_card_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="speichern"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            app:backgroundTint="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/additional_information_card_textfield"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=")"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/elapsed_time_text_card_value"
            app:layout_constraintStart_toEndOf="@+id/elapsed_time_text_card_value"
            app:layout_constraintTop_toTopOf="@+id/elapsed_time_text_card_value"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Status:"
            app:layout_constraintStart_toStartOf="@+id/case_id_card_title"
            app:layout_constraintTop_toBottomOf="@+id/priority_text_card_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>